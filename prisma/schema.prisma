generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  SUPERADMIN
  USER
}

enum CategoryType {
  Accessories
  Laptops
  Phone
  Electronics
}

model Users {
  id       Int    @id @default(autoincrement())
  fullName String
  email    String @unique
  phone    String
  password String
  img      String
  role     Role   @default(USER)
  status   String @default("INACTIVE")
}

model Category {
  id   Int          @id @default(autoincrement())
  name String
  type CategoryType

  Product Product[]
}

model Product {
  id         Int    @id @default(autoincrement())
  name       String
  price      Int
  categoryId Int

  category Category @relation(fields: [categoryId], references: [id])
}

